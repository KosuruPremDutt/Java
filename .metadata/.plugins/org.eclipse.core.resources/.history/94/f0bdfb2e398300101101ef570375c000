apiVersion: apps/v1
kind: Deployment
metadata:
  name: doctor-appointment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: doctor-appointment
  template:
    metadata:
      labels:
        app: doctor-appointment
    spec:
      containers:
        - name: doctor-appointment
          image: premdutt/doctor-appointment:latest  # âœ… Updated image from Docker Hub
          ports:
            - containerPort: 8080
          env:
            - name: SPRING_DATASOURCE_URL
              value: jdbc:mysql://mysql:3306/doctor_appointment_db
            - name: SPRING_DATASOURCE_USERNAME
              value: root
            - name: SPRING_DATASOURCE_PASSWORD
              value: Password@1
---
apiVersion: v1
kind: Service
metadata:
  name: doctor-appointment-service
spec:
  type: NodePort
  selector:
    app: doctor-appointment
  ports:
    - port: 8080
      targetPort: 8080
